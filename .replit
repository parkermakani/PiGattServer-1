modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BLE Server"

[[workflows.workflow]]
name = "BLE Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "/nix/store/$(ls -t /nix/store | grep python3-3.11 | head -n1)/bin/python3 ble_server.py"

[deployment]
run = ["sh", "-c", "/nix/store/$(ls -t /nix/store | grep python3-3.11 | head -n1)/bin/python3 ble_server.py"]
